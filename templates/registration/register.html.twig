{% extends 'base.html.twig' %}

{% block title %}Register WaterBoat
{% endblock %}

{% block body %}
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

		<div class="site-wrap">

			<div class="site-mobile-menu site-navbar-target">
				<div class="site-mobile-menu-header">
					<div class="site-mobile-menu-close mt-3">
						<span class="icon-close2 js-menu-toggle"></span>
					</div>
				</div>
				<div class="site-mobile-menu-body"></div>
			</div>


			<div class="header-top bg-light">
				<div class="container">
					<div class="row align-items-center">
						<div class="col-6 col-lg-3">
							<a href="{{ path('barco')}}">
								<img
								src="images/logo.png" alt="Image" class="img-fluid">
							<!-- <strong>Water</strong>Boat -->
							</a>
						</div>
						<div class="col-lg-3 d-none d-lg-block">

							<div class="quick-contact-icons d-flex">
								<div class="text">
									<span class="h4 d-block">Registro <i class="fa-solid fa-registered"></i></span>
									<span class="caption-text">Disfruta de los servicios</span>
								</div>
							</div>

						</div>

						<div class="col-lg-3 d-none d-lg-block">
							<div class="quick-contact-icons d-flex">
								<div class="text">
									<span class="h4 d-block">info@gmail.com <i class="fa-solid fa-paper-plane"></i></span>
									<span class="caption-text">Más información</span>
								</div>
							</div>
						</div>
						<div class="col-6 d-block d-lg-none text-right">
							<a href="#" class="d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black">
								<span class="icon-menu h3"></span>
							</a>
						</div>
					</div>
                    <hr>
				</div>
                
            <div class="container">
                <form class="row">
                    {{ form_start(registrationForm) }}
                    <div class="form-group col-md-3">
                        {{ form_row(registrationForm.nombre) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(registrationForm.apellidos) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(registrationForm.tipo_licencia) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(registrationForm.roles) }}
                    </div>
           <div class="form-group col-md-3">     
                <button type="submit" class="btn btn-primary py-3 px-5">Register</button>
            </div>
            {{ form_end(registrationForm) }}
     </form>
            </div>

			<div class="container">
				<div class="row">
					<div class="col-6">
						<p class="mb-4"><img src="images/logo.png" alt="Image" class="img-fluid"></p>
					</div>
                    <div class="col-6">
						<div class="copyright">
							<p>
								Copyright &copy;<script>
									document.write(new Date().getFullYear());
								</script>
								All rights reserved | This template is made with
								<i class="icon-heart text-danger" aria-hidden="true"></i>
								by
								<a href="https://colorlib.com" target="_blank">Jose Luis Berrio Sanchez</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>

</body>

    
{% endblock %}
